<Window x:Class="MindWord.Desktop.Windows.HelperShowWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MindWord.Desktop.Windows"
        mc:Ignorable="d"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        Title="HelperShowWindow" Height="200" Width="400">
    <Border CornerRadius="8" Background="{DynamicResource SecundaryYellowColor}">
        <TextBlock x:Name="tbHelperShow" 
                   Foreground="{DynamicResource PrimaryWhiteColor}"
                   TextWrapping="Wrap"
                   FontFamily="JetBrains Mono"
                   FontWeight="SemiBold"
                   FontSize="16">
        </TextBlock>
        
    </Border>
</Window>
