<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Background Colors -->
    <SolidColorBrush x:Key="LightPrimaryBackgroundColor" Color="#EAEAEA"/>
    <SolidColorBrush x:Key="LightSecundaryBackgroundColor" Color="#FCFCFC"/>
    <SolidColorBrush x:Key="LightTetriaryBackgroundColor" Color="#F6F6F6"/>

    <!-- Primary Colors -->
    <SolidColorBrush x:Key="LightPrimaryBlueColor" Color="#5B7FFF"/>
    <SolidColorBrush x:Key="LightPrimaryGrayColor" Color="#BFBFC4"/>

    <!-- Secundary Colors -->
    <SolidColorBrush x:Key="LightSecundaryBlueColor" Color="#CEE8FB"/>
    <SolidColorBrush x:Key="LightSecundaryGrayColor" Color="#EEEEEE"/>

    <!-- Typograhy Colors -->
    <SolidColorBrush x:Key="LightTextPrimaryColor" Color="#020F16"/>
    <SolidColorBrush x:Key="LightTextSecundaryColor" Color="#434344"/>
    <SolidColorBrush x:Key="LightTextTetriaryColor" Color="#585859"/>

    <!-- Icons Colors -->
    <SolidColorBrush x:Key="LightActionIconColor" Color="#434344"/>
</ResourceDictionary>